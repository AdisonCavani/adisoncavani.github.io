{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}